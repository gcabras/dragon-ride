<div class="container">
  <div class="row">
      <h1>Claim your Dragon!</h1>
      <div class="col-lg-6">
        <ul>
          <% unless @dragons.empty? %>
            <% @dragons.each do |dragon| %>
              <li><%= link_to dragon.name, dragon_path(dragon) %></li>
            <% end %>
          <% end %>
        </ul>

        <%= link_to "Add a Dragon", new_dragon_path if policy(Dragon).new? %>
        <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete } %>
      </div>
      <div class="col-lg-6">
        <div id="map" style="width: 100%; height: 600px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
  </div>
</div>
